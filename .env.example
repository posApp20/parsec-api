# ============ PARSEC API - Environment Configuration ============
# Copy this to .env and fill in your production values

# ============ SERVER CONFIGURATION ============
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============ DATABASE CONFIGURATION ============
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parsec_db
DB_USER=parsec
DB_PASSWORD=parsec_secure_password_change_this

# ============ JWT CONFIGURATION ============
# Generate with: openssl rand -base64 32
JWT_SECRET=your_random_secret_key_here_change_this_in_production
JWT_EXPIRY=30d

# ============ EMAIL VALIDATION ============
# Get API key from myemailverifier.com
MYEMAILVERIFIER_API_KEY=your_api_key_here

# ============ SEARCH CONFIGURATION ============
# Cost per search in credits
SEARCH_COST=0.50

# ============ LOGGING ============
LOG_LEVEL=info
LOG_DIR=./logs

# ============ TELEGRAM (Optional) ============
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
